{{yield}}
<VerticalCollection 
        @items={{this.students}}
        @estimateHeight={{60}}
        @bufferSize={{2}}
        @containerSelector="body"
        @lastReached={{this.loadBelow}}  as |item|>
    <div class="m-auto d-flex justify-content-between align-items-center my-3 rounded-3 px-3 align-middle" style="width: 900px; max-width: 95%; height: 60px; background-color: rgb(239 239 239);">
            <div class="col-3">
              <img src={{item.profileImage}} alt="" class="rounded-circle" width="50px" height="50px"/>
                <div class="d-inline-block align-middle mx-2">
                    <span class="d-block fs-6 m-0 fw-semibold name">{{item.id}} {{item.name}}</span>
                    <span class="d-block rollNumber">{{item.rollNumber}}</span>
                </div>
            </div>
            <div class="col-3">
                <div class="d-inline-block">
                    <span class="d-block department">{{item.department}}</span>
                    <span class="d-block enrollmentYear">{{item.enrollmentYear}}</span>
                </div>
            </div>
            <div class="col-2">
                <span class="d-block dob">{{item.dob}}</span>
                <span class="d-block gender">{{item.gender}}</span>
            </div>

            <div class="col-3 address">{{item.address}}</div>
    </div>
</VerticalCollection>